<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Font">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Font.Timer" parent="Font">
        <item name="android:textSize">72sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Font.Heading" parent="Font">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Font.Heading.Minimized" parent="Font.Heading">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Font.Primary" parent="Font">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Font.Secondary" parent="Font">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
</resources>